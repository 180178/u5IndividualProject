<Window x:Class="u5GameofLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u5GameofLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" PreviewMouseDown="click">
    <Canvas x:Name="canvas">
        <Button x:Name="submit" Content="Start" Height="35" Canvas.Left="395" Canvas.Top="290" Width="87" Click="submit_Click"/>
        <Button x:Name="stop" Content="Stop" Height="44" Canvas.Left="395" Canvas.Top="241" Width="87" Click="stop_Click"/>
        <Label Content="Click on Any Rectangle to Set Its State to Alive" Height="45" Canvas.Left="41" Canvas.Top="403" Width="261"/>
        <Button x:Name="reset" Content="Clear" Height="30" Canvas.Left="395" Canvas.Top="206" Width="87" Click="reset_Click"/>

    </Canvas>
</Window>
